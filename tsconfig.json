{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": "./",
    "lib": [
      "es2023",
      "ESNext",
      "ESNext.Promise",
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "stripInternal": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "test"
  ]
}
